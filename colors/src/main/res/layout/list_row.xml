<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/textview_small_margin"
        android:layout_marginLeft="@dimen/textview_medium_margin"
        android:layout_marginRight="@dimen/textview_medium_margin"
        android:layout_marginTop="@dimen/textview_small_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/logMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

</FrameLayout>